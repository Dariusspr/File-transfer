<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<HBox prefHeight="30.0" spacing="5.0" style="-fx-background-color: rgba(0, 0, 0, 0.25);" xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.dariusspr.ftransfer.ftransfer_client.gui.controller.SelectedFileController">
   <children>
      <Text fx:id="txtName" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="filename.txt" textAlignment="CENTER">
         <font>
            <Font size="15.0" />
         </font>
         <HBox.margin>
            <Insets left="5.0" top="8.0" />
         </HBox.margin>
      </Text>
      <Button fx:id="btnDelete" mnemonicParsing="false" prefHeight="24.0" style="-fx-background-color: transparent;">
         <graphic>
            <Text fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" text="X">
               <font>
                  <Font name="Arial Black" size="18.0" />
               </font>
            </Text>
         </graphic>
      </Button>
   </children>
</HBox>
